{
  "manifest_version": 3,

  "name": "My Extension",
  "version": "0.1",
  "description": "This extension is a starting point to create a real Chrome extension",

  "action": {
    "default_icons": {
      "16": "logo512.png",
      "48": "logo192.png",
      "128": "logo192.png"
    },
    "default_title": "Open the popup",
    "default_popup": "index.html"
  },
  "permissions": [
    "storage",
    "tabCapture"
  ]
}